<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="6dp">


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:orientation="vertical">

      <TextView
          style="@style/LabelFildStaticoRowListView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="0.6"
          android:text="Modelo"/>

      <TextView
          android:id="@+id/valueModelo"
          style="@style/ValueDinamicoRowListViewDestaque"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="0.4"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:orientation="vertical">>

      <TextView
          style="@style/LabelFildStaticoRowListView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="0.4"
          android:text="@string/lbl_status"/>

      <TextView
          android:id="@+id/valueStatus"
          style="@style/ValueDinamicoRowListView"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="0.6"/>
    </LinearLayout>


  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:paddingBottom="5dp"
      android:paddingRight="5dp">

    <TextView
        style="@style/LabelFildStaticoRowListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grupo"/>

    <TextView
        android:id="@+id/valueGrupo"
        style="@style/TextViewDetalhe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"/>
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="vertical">

      <TextView
          style="@style/LabelFildStaticoRowListView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="0.6"
          android:text="Diária Livre"/>

      <TextView
          android:id="@+id/valuePrecoKmLivre"
          style="@style/TextViewDetalhe"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="R$ 300,00"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="vertical">

      <TextView
          style="@style/LabelFildStaticoRowListView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="0.6"
          android:text="Diária Livre"/>

      <TextView
          android:id="@+id/valuePrecoKmControlado"
          style="@style/TextViewDetalhe"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="R$ 265,00"/>

    </LinearLayout>
  </LinearLayout>
</LinearLayout>